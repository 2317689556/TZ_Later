<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="spring.dao.UserMapper">
    <!--   登录 -->
    <select id="login" parameterType="User" resultType="User">
        SELECT *
        FROM user
        WHERE username=#{username}
        AND password=#{password}
    </select>

    <!--用户管理__全查-->
    <select id="userFandAll" resultType="User">
      SELECT user.*,grade.`name`
      FROM `user` LEFT JOIN grade ON `user`.Grade_id=grade.id
    </select>

    <!--用户管理__添加-->
    <insert id="userAdd">
        insert into user(username,password,grade_Id)
        value(#{username},#{password},#{gradeId});
    </insert>

    <!--用户管理__配合修改的单查-->
    <!--User fandUserById(User user);-->
    <select id="fandUserById" resultType="User">
      select * from
       user
        where
         id=#{id}
    </select>

    <!--用户管理__修改-->
    <update id="updateUser" parameterType="User">
        update user set
         username=#{username},
         password=#{password},
         Grade_Id=#{gradeId}
         where
         id=#{id}
    </update>

    <!--用户管理__删除-->
    <delete id="deleteUser">
        delete from user where id=#{id}
    </delete>

    <!--公户管理__备注修改-->
    <update id="updateUserBZ">
        update user set remarks=#{remarks} where id=#{id}
    </update>
</mapper>
